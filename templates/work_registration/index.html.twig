{% extends 'base.html.twig' %}

{% block title %}Index van urenregistratie{% endblock %}

{% block stylesheets %}

    {% include 'includes/stylesheets.html.twig' %}

{% endblock %}

{% block body %}

    {% include 'includes/navigation.html.twig' %}

    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="content-page">
        <!-- Start content -->
        <div class="content">
            <div class="container-fluid">

                <h4 class="page-title">Route</h4>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('admin_page') }}">Admin</a></li>
                    <li class="breadcrumb-item active">Overview urenregistratie</li>
                </ol>

                <!--HTML WITHOUT THE DASHBOARD PART-->

                <div class="row">
                    <div class="col-12">
                        <div class="card-box table-responsive">

                            <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0"
                                   width="100%">

                                {% if work %}
                                    <thead>
                                    <tr>
                                        <th style="font-size:15px">Id</th>
                                        <th style="font-size:15px">Developer</th>
                                        <th style="font-size:15px">Credit card</th>
                                        <th style="font-size:15px">Factuur</th>
                                        <th style="font-size:15px">Taak</th>
                                        <th style="font-size:15px">Begin</th>
                                        <th style="font-size:15px">Eind</th>
                                        <th style="font-size:15px">Vertstreken tijd</th>

                                        <th style="font-size:15px; text-align: center">Edit</th>
                                        <th style="font-size:15px; text-align: center">Delete</th>
                                    </tr>
                                    </thead>

                                    <tbody>
                                    {% for work in work %}
                                        <tr>

                                            <td>{{ work.id }}</td>
                                            <td>{{ work.developer }}</td>
                                            <td>{{ work.creditCard }}</td>
                                            <td>{{ work.invoice }}</td>
                                            <td>{{ work.task }}</td>
                                            <td>{{ work.begin | date('d M Y') }}</td>
                                            <td>{{ work.end | date('d M Y') }}</td>
                                            <td>{{ work.timePast }}</td>

                                            <!-- The edit and delete buttons -->
                                            <td>
                                                <a href="/admin/workregistrations/edit/{{ work.id }}" class="btn btn-dark md md-create"
                                                   style="border-color:#5fbeaa"></a>
                                            </td>
                                            <td>
                                                <a href="/admin/workregistrations/delete/{{ work.id }}" class="confirm btn btn-danger delete-workregistration" data-id="{{ work.id }}">
                                                    Delete</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                {% else %}
                                    <p>No workregistration made yet</p>
                                {% endif %}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end row -->

{% endblock %}

{% block javascripts %}

    {% include 'includes/scripts.html.twig' %}

{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Project page{% endblock %}

{% block stylesheets %}

    {% include 'includes/stylesheets.html.twig' %}

{% endblock %}

{% block body %}

    {% include 'includes/navigation.html.twig' %}


    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="content-page">
        <!-- Start content -->
        <div class="content">
            <div class="container-fluid">

                <h4 class="page-title">Route</h4>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('admin_page') }}">Admin</a></li>
                    <li class="breadcrumb-item active">Overview projects</li>
                </ol>

                <!--HTML WITHOUT THE DASHBOARD PART-->

                <div class="row">
                    <div class="col-12">
                        <div class="card-box table-responsive">

                            <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0"
                                   width="100%">

                                {% if projects %}
                                    <thead>
                                    <tr>
                                        <th style="font-size:15px">Project id</th>
                                        {#<th style="font-size:15px">Customer id</th>#}
                                        {#<th style="font-size:15px">User id</th>#}
                                        {#<th style="font-size:15px">Account id</th>#}
                                        <th style="font-size:15px">Title</th>
                                        <th style="font-size:15px">Body</th>
                                        <th style="font-size:15px">Git URL</th>
                                        <th style="font-size:15px">Production URL</th>
                                        <th style="font-size:15px">Development URL</th>
                                        <th style="font-size:15px">active</th>
                                        <th style="font-size:15px">created</th>
                                        <th style="font-size:15px">updated</th>

                                        <th style="font-size:15px; text-align: center">Edit</th>
                                        <th style="font-size:15px; text-align: center">Delete</th>
                                    </tr>
                                    </thead>

                                    <tbody>
                                    {% for project in projects %}
                                        <tr>

                                            <td>{{ project.id }}</td>
                                            {#<td>{{ customer.id }}</td>#}
                                            {#<td>{{ user.id }}</td>#}
                                            {#<td>{{ account.id }}</td>#}
                                            <td>{{ project.title }}</td>
                                            <td>{{ project.body }}</td>
                                            <td>{{ project.gitUrl }}</td>
                                            <td>{{ project.productionUrl }}</td>
                                            <td>{{ project.developmentUrl }}</td>

                                            {% if project.active == 1 %}
                                                <td style="color: green">V</td>
                                            {% else %}
                                                <td style="color: red">X</td>
                                            {% endif %}

                                            <td>{{ project.created | date('d M Y') }}</td>
                                            <td>{{ project.updated | date('d M Y') }}</td>

                                            <!-- The edit and delete buttons -->
                                            <td>
                                                <a href="/admin/project/edit/{{ project.id }}" class="btn btn-dark md md-create"
                                                   style="border-color:#5fbeaa"></a>
                                            </td>
                                            <td>
                                                <a href="/admin/project/delete/{{ project.id }}" class="confirm btn btn-danger delete-project" data-id="{{ project.id }}">
                                                    Delete</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                {% else %}
                                    <p>No projects made yet</p>
                                {% endif %}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end row -->

{% endblock %}

    {% block javascripts %}

        {% include 'includes/scripts.html.twig' %}


    {% endblock %}

